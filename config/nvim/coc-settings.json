{
    "codeLens.enable": true,
    "diagnostic.virtualTextPrefix": "◀ ",
    "diagnostic.messageTarget": "echo",
    "suggest.noselect": false,
    "suggest.snippetIndicator": "►",
    "languageserver": {
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        },
        "ocaml": {
            "command": "ocaml-language-server",
            "args": ["--stdio"],
            "filetypes": ["ocaml", "reason"]
        }
    },
    "git.enableGutters": true
}
